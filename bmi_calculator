# BMI Calculator - Command Line Version

def calculate_bmi(weight_kg: float, height_m: float) -> tuple[float, str]:
    """
    Calculate BMI and return the value along with its category.
    
    BMI Formula: weight (kg) / height^2 (m)
    
    Categories:
    - Underweight: BMI < 18.5
    - Normal: 18.5 <= BMI < 25
    - Overweight: 25 <= BMI < 30
    - Obese: BMI >= 30
    """
    if height_m <= 0:
        raise ValueError("Height must be greater than 0")
    if weight_kg < 0:
        raise ValueError("Weight cannot be negative")
    
    bmi = weight_kg / (height_m ** 2)
    
    if bmi < 18.5:
        category = "Underweight"
    elif 18.5 <= bmi < 25:
        category = "Normal"
    elif 25 <= bmi < 30:
        category = "Overweight"
    else:
        category = "Obese"
    
    return bmi, category

def main():
    print("=== BMI Calculator ===")
    print("This calculator uses weight in kilograms and height in meters.")
    print()
    
    # Get user input for weight
    while True:
        try:
            weight_input = input("Enter your weight (kg): ").strip()
            weight = float(weight_input)
            if weight <= 0:
                print("Please enter a positive weight value.")
                continue
            break
        except ValueError:
            print("Invalid input. Please enter a valid number for weight.")
    
    # Get user input for height
    while True:
        try:
            height_input = input("Enter your height (m): ").strip()
            height = float(height_input)
            if height <= 0:
                print("Please enter a positive height value.")
                continue
            break
        except ValueError:
            print("Invalid input. Please enter a valid number for height.")
    
    # Calculate BMI
    try:
        bmi, category = calculate_bmi(weight, height)
        
        # Display results
        print("\n" + "="*30)
        print(f"Your BMI: {bmi:.2f}")
        print(f"Category: {category}")
        print("="*30)
        
        # Additional info
        if category == "Normal":
            print("Great! You're in a healthy weight range.")
        elif category == "Underweight":
            print("Consider consulting a healthcare professional for advice on gaining weight.")
        elif category == "Overweight":
            print("Consider lifestyle changes for better health.")
        else:  # Obese
            print("It's recommended to consult a healthcare professional.")
            
    except ValueError as e:
        print(f"Error: {e}")

if __name__ == "__main__":
    main()
